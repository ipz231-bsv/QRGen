<Application x:Class="QRCodeGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QRCodeGenerator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="WindowBackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="ForegroundColor" Color="Black"/>

        <!-- Глобальні стилі для Foreground -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>
    </Application.Resources>
</Application>
