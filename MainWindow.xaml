<Window x:Class="QRCodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Code Generator" Height="600" Width="800"
        MinWidth="500" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Верхній блок: Введення -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox x:Name="txtInput" Width="300" Margin="0,0,10,0" ToolTip="Введіть текст або посилання для генерації QR-коду"/>
            <Button Content="Копіювати" Click="btnCopyInput_Click" ToolTip="Скопіювати текст у буфер обміну"/>
        </StackPanel>

        <!-- Ліва частина: Налаштування -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,10,10" VerticalAlignment="Stretch">
            <!-- RadioButton для вибору рівня корекції помилок -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="rbECCL" Content="Low (L)" GroupName="ECC" Checked="ECC_Checked"/>
                <RadioButton x:Name="rbECCM" Content="Medium (M)" GroupName="ECC" Checked="ECC_Checked"/>
                <RadioButton x:Name="rbECCQ" Content="Quality (Q)" GroupName="ECC" Checked="ECC_Checked" IsChecked="True"/>
                <RadioButton x:Name="rbECCH" Content="High (H)" GroupName="ECC" Checked="ECC_Checked"/>
            </StackPanel>

            <!-- RadioButton для вибору формату збереження (PNG, JPG) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="rbPNG" Content="PNG" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton x:Name="rbJPG" Content="JPG" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel>

            <!-- Вибір кольору QR-коду та фону -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Колір QR:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbQrColor" Width="100" SelectionChanged="cbQrColor_SelectionChanged">
                        <ComboBoxItem Content="Black" IsSelected="True"/>
                        <ComboBoxItem Content="Red"/>
                        <ComboBoxItem Content="Green"/>
                        <ComboBoxItem Content="Blue"/>
                        <ComboBoxItem Content="Purple"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Колір фону:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbBgColor" Width="100" SelectionChanged="cbBgColor_SelectionChanged">
                        <ComboBoxItem Content="White" IsSelected="True"/>
                        <ComboBoxItem Content="Yellow"/>
                        <ComboBoxItem Content="LightGray"/>
                        <ComboBoxItem Content="Cyan"/>
                        <ComboBoxItem Content="Orange"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- GroupBox для соціальних мереж -->
            <GroupBox Header="Соціальні мережі" Margin="0,0,0,10">
                <StackPanel>
                    <ComboBox x:Name="cbSocialType" Width="150" Margin="5" SelectedIndex="0" ToolTip="Оберіть соціальну мережу">
                        <ComboBoxItem Content="Facebook"/>
                        <ComboBoxItem Content="Instagram"/>
                        <ComboBoxItem Content="Twitter"/>
                        <ComboBoxItem Content="LinkedIn"/>
                        <ComboBoxItem Content="YouTube"/>
                        <ComboBoxItem Content="TikTok"/>
                    </ComboBox>
                    <TextBox x:Name="txtSocialUser" Width="200" Margin="5" Height="25" ToolTip="Введіть ім'я користувача або посилання"/>
                    <Button x:Name="btnGenerateSocial" Content="Згенерувати QR для соцмережі" Width="200" Margin="5" Click="btnGenerateSocial_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- GroupBox для Wi-Fi QR -->
            <GroupBox Header="Wi-Fi QR" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtWifiSSID" Width="100" Margin="5" Height="25" ToolTip="Введіть SSID (назву Wi-Fi мережі)"/>
                    <PasswordBox x:Name="txtWifiPassword" Width="100" Margin="5" Height="25" ToolTip="Введіть пароль Wi-Fi (якщо є)"/>
                    <ComboBox x:Name="cbWifiAuth" Width="80" Margin="5" Height="25" ToolTip="Оберіть тип автентифікації Wi-Fi">
                        <ComboBoxItem Content="WPA" IsSelected="True"/>
                        <ComboBoxItem Content="WEP"/>
                        <ComboBoxItem Content="nopass"/>
                    </ComboBox>
                    <Button x:Name="btnGenerateWifi" Content="Wi-Fi QR" Width="80" Margin="5" Click="btnGenerateWifi_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Права частина: QR-код та історія -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Image x:Name="imgQRCode" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <ListBox x:Name="lbHistory"
                     Grid.Row="1"
                     Margin="0,10,0,0"
                     ToolTip="Історія збережених QR-кодів"
                     SelectionMode="Extended"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                <TextBox x:Name="txtHistorySearch" Width="120" Margin="0,0,5,0" ToolTip="Пошук в історії" TextChanged="txtHistorySearch_TextChanged"/>
                <Button Content="Видалити" Click="btnDeleteHistory_Click" Margin="0,0,5,0"/>
                <Button Content="Перейменувати" Click="btnRenameHistory_Click"/>
            </StackPanel>
        </Grid>

        <!-- Нижній блок: Кнопки -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Згенерувати" x:Name="btnGenerate" Click="btnGenerate_Click" Margin="0,0,10,0"/>
            <Button Content="Показати історію" x:Name="btnShowHistory" Click="btnShowHistory_Click" Margin="0,0,10,0"/>
            <Button Content="Змінити тему" x:Name="btnToggleTheme" Click="btnToggleTheme_Click" ToolTip="Перемкнути світлу/темну тему"/>
        </StackPanel>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Name="statusBar" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="txtStats" Text="Статистика: "/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>